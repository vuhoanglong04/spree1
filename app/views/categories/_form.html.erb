<%= form_with(model: @category) do |form| %>

  <div class="mb-8">
    <div class="flex items-center space-x-2 text-sm text-gray-500 mb-4">
      <%= link_to "Categories", users_path, class: "hover:text-gray-700" %>
      <i class="fas fa-chevron-right text-xs"></i>
      <span class="text-gray-900"><%= @category.persisted? ? "Update" : "Create" %> Category</span>
    </div>
    <div class="flex items-center justify-between">
      <div>
        <h1 class="text-3xl font-bold text-gray-900 mb-2"><%= @category.persisted? ? "Update" : "Create" %>
          Category</h1>
        <p class="text-gray-600"><%= @category.persisted? ? "Update properties of category ##{@category.id}" : "Add a new category to the system" %></p>
      </div>
      <div class="flex items-center space-x-3">
        <%= form.submit "#{@category.persisted? ? "Update" : "Create"} Category", class: "bg-primary text-white px-4 py-2 rounded-lg text-sm font-medium hover:bg-blue-700" %>
      </div>
    </div>
  </div>

  <!-- User Form -->
  <div class="space-y-8">
    <% if @category.errors.any? %>
      <div class="mb-4 p-4 bg-red-100 border border-red-400 text-red-700 rounded">
        <h2 class="font-semibold mb-2">Please fix the following errors:</h2>
        <ul class="list-disc pl-5">
          <% @category.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
      <!-- Main Content -->
      <div class="lg:col-span-2 space-y-6">
        <!-- Personal Information -->
        <div class="bg-white rounded-xl shadow-sm border p-6">
          <h2 class="text-lg font-semibold text-gray-900 mb-6">Category Information</h2>
          <div class="space-y-4">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
              <div>
                <%= form.label :name, "Category Name *", class: "block text-sm font-medium text-gray-700 mb-2" %>
                <%= form.text_field :name, placeholder: "Enter category name", class: "w-full px-3 py-2 border border-gray-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent" %>
              </div>
              <br/>
              <div>
                <%= form.label :image_url, "Image *", class: "block text-sm font-medium text-gray-700 mb-2" %>
                <%= form.file_field :image_url, placeholder: "Image", class: "w-full px-3 py-2 border border-gray-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent" %>
              </div>
              <br/>
              <div>
                <%= form.label :parent_id, "Parent Category", class: "block text-sm font-medium text-gray-700 mb-2" %>
                <%= form.select :parent_id,
                                options_from_collection_for_select(@parents, :id, :name, @category.parent_id),
                                { include_blank: 'Select a parent category' },
                                class: "w-full px-3 py-2 border border-gray-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent"
                %>


              </div>
            </div>

          </div>
        </div>
      </div>


    </div>

    <!-- Form Actions -->
    <div class="flex items-center justify-between pt-6 border-t">
      <%= link_to categories_path, class: "text-gray-600 hover:text-gray-800 font-medium" do %>
        ‚Üê Back to category list
      <% end %>
      <div class="flex items-center space-x-3">
        <%= form.submit "#{@category.persisted? ? "Update" : "Create"} category", class: "bg-primary text-white px-6 py-2 rounded-lg font-medium hover:bg-blue-700" %>
      </div>
    </div>
  </div>
<% end %>