<%= form_with(model: @color) do |form| %>

  <div class="mb-8">
    <div class="flex items-center space-x-2 text-sm text-gray-500 mb-4">
      <%= link_to "Colors", colors_path, class: "hover:text-gray-700" %>
      <i class="fas fa-chevron-right text-xs"></i>
      <span class="text-gray-900"><%= @color.persisted? ? "Update" : "Create" %> Color</span>
    </div>
    <div class="flex items-center justify-between">
      <div>
        <h1 class="text-3xl font-bold text-gray-900 mb-2"><%= @color.persisted? ? "Update" : "Create" %>
          Color</h1>
        <p class="text-gray-600"><%= @color.persisted? ? "Update properties of color ##{@color.id}" : "Add a new color to the system" %></p>
      </div>
      <div class="flex items-center space-x-3">
        <%= form.submit "#{@color.persisted? ? "Update" : "Create"} Color", class: "bg-primary text-white px-4 py-2 rounded-lg text-sm font-medium hover:bg-blue-700" %>
      </div>
    </div>
  </div>

  <!-- User Form -->
  <div class="space-y-8">
    <% if @color.errors.any? %>
      <div class="mb-4 p-4 bg-red-100 border border-red-400 text-red-700 rounded">
        <h2 class="font-semibold mb-2">Please fix the following errors:</h2>
        <ul class="list-disc pl-5">
          <% @color.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
      <!-- Main Content -->
      <div class="lg:col-span-2 space-y-6">
        <!-- Personal Information -->
        <div class="bg-white rounded-xl shadow-sm border p-6">
          <h2 class="text-lg font-semibold text-gray-900 mb-6">Color Information</h2>
          <div class="space-y-4">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
              <div>
                <%= form.label :name, "Color Name *", class: "block text-sm font-medium text-gray-700 mb-2" %>
                <div class="flex items-center space-x-3">
                  <%= form.color_field :hex_code,
                                       id: "color",
                                       class: "w-12 h-10 border border-gray-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary cursor-pointer" %>
                  <%= form.text_field :name, placeholder: "Enter color name", class: "w-full px-3 py-2 border border-gray-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent" %>
                </div>
              </div>
              <br/>

            </div>

          </div>
        </div>
      </div>


    </div>

    <!-- Form Actions -->
    <div class="flex items-center justify-between pt-6 border-t">
      <%= link_to colors_path, class: "text-gray-600 hover:text-gray-800 font-medium" do %>
        ‚Üê Back to color list
      <% end %>
      <div class="flex items-center space-x-3">
        <%= form.submit "#{@color.persisted? ? "Update" : "Create"} color", class: "bg-primary text-white px-6 py-2 rounded-lg font-medium hover:bg-blue-700" %>
      </div>
    </div>
  </div>
<% end %>