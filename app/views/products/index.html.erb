<div class="mb-8">
  <h1 class="text-3xl font-bold text-gray-900 mb-2">Products</h1>
  <p class="text-gray-600">Manage products catalog</p>
</div>

<!-- Stats Cards -->
<div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
  <div class="bg-white p-6 rounded-xl shadow-sm border">
    <div class="flex items-center justify-between mb-4">
      <h3 class="text-sm font-medium text-gray-600">Total Products</h3>
      <i class="fas fa-box text-gray-400"></i>
    </div>
    <div class="mb-2">
      <span class="text-3xl font-bold text-gray-900"><%= @products.size %></span>
    </div>
    <p class="text-sm text-success">+12% from last month</p>
  </div>

  <div class="bg-white p-6 rounded-xl shadow-sm border">
    <div class="flex items-center justify-between mb-4">
      <h3 class="text-sm font-medium text-gray-600">In Stock</h3>
      <i class="fas fa-check-circle text-gray-400"></i>
    </div>
    <div class="mb-2">
      <span class="text-3xl font-bold text-gray-900">2,156</span>
    </div>
    <p class="text-sm text-success">84.8% availability</p>
  </div>

  <div class="bg-white p-6 rounded-xl shadow-sm border">
    <div class="flex items-center justify-between mb-4">
      <h3 class="text-sm font-medium text-gray-600">Low Stock</h3>
      <i class="fas fa-exclamation-triangle text-gray-400"></i>
    </div>
    <div class="mb-2">
      <span class="text-3xl font-bold text-gray-900">327</span>
    </div>
    <p class="text-sm text-warning">Need restock</p>
  </div>

  <div class="bg-white p-6 rounded-xl shadow-sm border">
    <div class="flex items-center justify-between mb-4">
      <h3 class="text-sm font-medium text-gray-600">Out of Stock</h3>
      <i class="fas fa-times-circle text-gray-400"></i>
    </div>
    <div class="mb-2">
      <span class="text-3xl font-bold text-gray-900">60</span>
    </div>
    <p class="text-sm text-danger">Immediate action needed</p>
  </div>
</div>

<!-- Actions Bar -->
<div class="bg-white p-6 rounded-xl shadow-sm border mb-6">
  <div class="flex items-center justify-between">
    <div class="flex items-center space-x-4">
      <div class="relative">
        <i class="fas fa-search absolute left-3 top-1/2 transform -translate-y-1/2 text-gray-400 text-sm"></i>
        <input type="text" placeholder="Search products..." class="pl-10 pr-4 py-2 border border-gray-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent w-80">
      </div>
      <select class="border border-gray-200 rounded-lg px-3 py-2 focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent">
        <option>All Categories</option>
        <option>Electronics</option>
        <option>Clothing</option>
        <option>Home & Garden</option>
        <option>Sports</option>
      </select>
      <select class="border border-gray-200 rounded-lg px-3 py-2 focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent">
        <option>All Status</option>
        <option>In Stock</option>
        <option>Low Stock</option>
        <option>Out of Stock</option>
      </select>
    </div>
    <div class="flex items-center space-x-3">
      <button class="flex items-center px-3 py-2 border border-gray-200 rounded-lg hover:bg-gray-50">
        <i class="fas fa-download mr-2 text-sm"></i>
        Export
      </button>
      <%= link_to new_product_path, class: "bg-primary text-white px-4 py-2 rounded-lg text-sm font-medium hover:bg-blue-700" do %>
        <i class="fas fa-plus mr-2"></i>
        Add Product
      <% end %>
    </div>
  </div>
</div>

<!-- Users Table -->
<div class="bg-white rounded-xl shadow-sm border overflow-hidden">
  <div class="overflow-x-auto">
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-gray-50">
      <tr>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
          <input type="checkbox" class="rounded border-gray-300">
        </th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
          ID
        </th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
          Product Name
        </th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
          Brand
        </th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
          Category
        </th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
          Status
        </th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
          Actions
        </th>
      </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-200">
      <% @products.each do |product| %>
        <tr class="hover:bg-gray-50">
          <td class="px-6 py-4 whitespace-nowrap">
            <input type="checkbox" class="rounded border-gray-300">
          </td>

          <td class="px-6 py-4 whitespace-nowrap">
            <div class="text-sm text-gray-900"><%= product.id %></div>
          </td>
          <td class="px-6 py-4 whitespace-nowrap">
            <div class="text-sm text-gray-900"><%= product.name %></div>
          </td>
          <td class="px-6 py-4 whitespace-nowrap">
            <div class="text-sm text-gray-900"><%= product.brand %></div>
          </td>
          <td class="px-6 py-4 whitespace-nowrap">
            <div class="text-sm text-gray-900"><%= product.category.name %></div>
          </td>
          <td class="px-6 py-4 whitespace-nowrap">

            <% if product && product.deleted_at.nil? %>
                <span class="inline-flex items-center rounded-md bg-green-50 px-2 py-1 text-xs font-medium text-green-700 ring-1 ring-green-600/20 ring-inset">
              Activated
              </span>
            <% else %>
              <span class="inline-flex items-center rounded-md bg-red-50 px-2 py-1 text-xs font-medium text-red-700 ring-1 ring-red-600/10 ring-inset">Deactivated</span>
            <% end %>

          </td>


          <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
            <div class="flex items-center space-x-2">
              <%= link_to edit_product_path(product), class: "text-green-600 hover:text-green-900" do %>
                <i class="fas fa-edit"></i>
              <% end %>
              <%= link_to product_product_variants_path(product_id: product.id), class: "text-green-600 hover:text-green-900" do %>
                <i class="fas fa-ellipsis-h"></i>
              <% end %>
              <% if product.deleted_at.nil? %>
                <%= button_to product, method: :delete, class: "text-red-600 hover:text-red-900" do %>
                  <i class="fas fa-ban"></i>
                <% end %>
              <% else %>
                <%= button_to restore_product_path(product.id), method: :patch, class: "text-red-600 hover:text-red-900" do %>
                  <i class="fas fa-undo"></i>
                <% end %>
              <% end %>
            </div>
          </td>
        </tr>

      <% end %>
      </tbody>
    </table>
  </div>

  <%= render "layouts/paginate", paginate_collection: @products %>
</div>


