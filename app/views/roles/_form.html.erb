<%= form_with(model: @role) do |form| %>

  <div class="mb-8">
    <div class="flex items-center space-x-2 text-sm text-gray-500 mb-4">
      <%= link_to "Roles", roles_path, class: "hover:text-gray-700" %>
      <i class="fas fa-chevron-right text-xs"></i>
      <span class="text-gray-900"><%= @role.persisted? ? "Update" : "Create" %> Role</span>
    </div>
    <div class="flex items-center justify-between">
      <div>
        <h1 class="text-3xl font-bold text-gray-900 mb-2"><%= @role.persisted? ? "Update" : "Create" %>
          Role</h1>
        <p class="text-gray-600"><%= @role.persisted? ? "Update properties of role ##{@role.id}" : "Add a new role to the system" %></p>
      </div>
      <div class="flex items-center space-x-3">
        <%= form.submit "#{@role.persisted? ? "Update" : "Create"} Role", class: "bg-primary text-white px-4 py-2 rounded-lg text-sm font-medium hover:bg-blue-700" %>
      </div>
    </div>
  </div>

  <!-- User Form -->
  <div class="space-y-8">
    <% if @role.errors.any? %>
      <div class="mb-4 p-4 bg-red-100 border border-red-400 text-red-700 rounded">
        <h2 class="font-semibold mb-2">Please fix the following errors:</h2>
        <ul class="list-disc pl-5">
          <% @role.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
      <!-- Main Content -->
      <div class="lg:col-span-2 space-y-6">
        <!-- Personal Information -->
        <div class="bg-white rounded-xl shadow-sm border p-6">
          <h2 class="text-lg font-semibold text-gray-900 mb-6">Role Information</h2>
          <div class="space-y-4">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
              <div>
                <%= form.label :name, "Role Name *", class: "block text-sm font-medium text-gray-700 mb-2" %>
                <%= form.text_field :name, placeholder: "Enter role name", class: "w-full px-3 py-2 border border-gray-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent" %>
              </div>
              <br/>
            </div>
          </div>
        </div>
      </div>


    </div>

    <!-- Form Actions -->
    <div class="flex items-center justify-between pt-6 border-t">
      <%= link_to roles_path, class: "text-gray-600 hover:text-gray-800 font-medium" do %>
        ‚Üê Back to role list
      <% end %>
      <div class="flex items-center space-x-3">
        <%= form.submit "#{@role.persisted? ? "Update" : "Create"} role", class: "bg-primary text-white px-6 py-2 rounded-lg font-medium hover:bg-blue-700" %>
      </div>
    </div>
  </div>
<% end %>