<div class="min-h-screen flex items-center justify-center bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full space-y-8">
    <!-- Header -->
    <div class="text-center">
      <div class="mx-auto h-12 w-12 bg-primary rounded-full flex items-center justify-center">
        <i class="fas fa-lock text-white text-xl"></i>
      </div>
      <h2 class="mt-6 text-3xl font-bold text-gray-900">Change your password</h2>
      <p class="mt-2 text-sm text-gray-600">
        Enter your new password below to complete the reset process.
      </p>
    </div>

    <!-- Password Edit Form -->
    <div class="bg-white rounded-xl shadow-sm border p-8">
      <!-- Flash Alert -->
      <% if flash[:alert] %>
        <div class="p-4 mb-4 text-sm text-red-800 rounded-lg bg-red-50 dark:bg-gray-800 dark:text-red-400" role="alert">
          <span class="font-medium"><%= j flash[:alert] %></span>
        </div>
      <% end %>

      <%= form_for(resource, as: resource_name, url: user_password_path(resource_name), html: { method: :put, class: "space-y-6" }) do |f| %>
        <%= f.hidden_field :reset_password_token %>
        
        <!-- New Password Field -->
        <div>
          <%= f.label :password, class: "block text-sm font-medium text-gray-700 mb-2" do %>
            <i class="fas fa-lock mr-2 text-gray-400"></i>
            New Password
            <% if @minimum_password_length %>
              <span class="text-xs text-gray-500 font-normal">(<%= @minimum_password_length %> characters minimum)</span>
            <% end %>
          <% end %>
          <%= f.password_field :password, 
              autofocus: true,
              autocomplete: "new-password",
              placeholder: "Enter your new password",
              class: "w-full px-3 py-2 border border-gray-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent transition-colors" %>
        </div>

        <!-- Confirm New Password Field -->
        <div>
          <%= f.label :password_confirmation, class: "block text-sm font-medium text-gray-700 mb-2" do %>
            <i class="fas fa-check-circle mr-2 text-gray-400"></i>
            Confirm New Password
          <% end %>
          <%= f.password_field :password_confirmation, 
              autocomplete: "new-password",
              placeholder: "Confirm your new password",
              class: "w-full px-3 py-2 border border-gray-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent transition-colors" %>
        </div>

        <!-- Password Strength Indicator -->
        <div class="bg-gray-50 rounded-lg p-4">
          <h4 class="text-sm font-medium text-gray-700 mb-2">Password Requirements:</h4>
          <ul class="text-xs text-gray-600 space-y-1">
            <li class="flex items-center">
              <i class="fas fa-check text-green-500 mr-2"></i>
              At least <%= @minimum_password_length %> characters
            </li>
            <li class="flex items-center">
              <i class="fas fa-check text-green-500 mr-2"></i>
              Mix of letters and numbers
            </li>
            <li class="flex items-center">
              <i class="fas fa-check text-green-500 mr-2"></i>
              Include special characters for better security
            </li>
          </ul>
        </div>

        <!-- Submit Button -->
        <div>
          <%= f.submit "Change my password", 
              class: "w-full flex justify-center py-3 px-4 border border-transparent rounded-lg shadow-sm text-sm font-medium text-white bg-primary hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary transition-colors" %>
        </div>
      <% end %>

      <!-- Divider -->
      <div class="mt-6">
        <div class="relative">
          <div class="absolute inset-0 flex items-center">
            <div class="w-full border-t border-gray-200"></div>
          </div>
          <div class="relative flex justify-center text-sm">
            <span class="px-2 bg-white text-gray-500">Need help?</span>
          </div>
        </div>
      </div>

      <!-- Help Links -->
      <div class="mt-6 space-y-3">
        <div class="text-center">
          <p class="text-sm text-gray-600">
            Having trouble? 
            <a href="#" class="text-primary hover:text-blue-700 font-medium transition-colors">Contact support</a>
          </p>
        </div>
      </div>
    </div>

    <!-- Additional Links -->
    <div class="text-center space-y-2">
      <% if controller_name != 'sessions' %>
        <p class="text-sm text-gray-600">
          Remember your password? 
          <%= link_to "Sign in", new_session_path(resource_name), 
              class: "font-medium text-primary hover:text-blue-700 transition-colors" %>
        </p>
      <% end %>
      
      <% if devise_mapping.registerable? && controller_name != 'registrations' %>
        <p class="text-sm text-gray-600">
          Don't have an account? 
          <%= link_to "Sign up", new_registration_path(resource_name), 
              class: "font-medium text-primary hover:text-blue-700 transition-colors" %>
        </p>
      <% end %>
      
      <% if devise_mapping.confirmable? && controller_name != 'confirmations' %>
        <p class="text-sm text-gray-600">
          <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name), 
              class: "text-primary hover:text-blue-700 transition-colors" %>
        </p>
      <% end %>
      
      <% if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
        <p class="text-sm text-gray-600">
          <%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name), 
              class: "text-primary hover:text-blue-700 transition-colors" %>
        </p>
      <% end %>
    </div>
  </div>
</div>
