<!-- app/views/devise/mailer/reset_password_instructions.html.erb -->

<div style="font-family: sans-serif; background-color: #f9fafb; padding: 2rem; text-align: center;">

  <h1 style="font-size: 1.5rem; color: #1f2937; margin-bottom: 1rem;">
    🔐 Hello <%= @resource.email %>!
  </h1>

  <p style="font-size: 1rem; color: #4b5563; margin-bottom: 1.5rem;">
    We received a request to reset your password. You can change your password by clicking the button below:
  </p>

  <a href="<%= edit_password_url(@resource, reset_password_token: @token) %>"
     style="
     display: inline-block;
       padding: 0.75rem 1.5rem;
       background-color: #6366f1;
       color: white;
       text-decoration: none;
       border-radius: 0.375rem;
       font-weight: 600;
       box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
       margin-bottom: 2rem;
     ">
    🔁 Change My Password
  </a>

  <p style="font-size: 0.875rem; color: #6b7280; margin-top: 2rem;">
    If you didn’t request this, you can safely ignore this email. Your password will not change unless you click the link above and set a new one.
  </p>

</div>
